<head>
<meta charset="utf-8">
<title>数据删除</title>
<script src="../jquery/jquery-1.9.0.min.js"></script>
<style>
body{
	font-size: 14px;
	text-align: center;
}
table {
	border-collapse: collapse;	
  width: 600px;
}
table th{
	height: 30px;
}
table tr td{
	height: 50px;
	width: 100px;
	line-height: 50px;
}
table tr td > img{
width: 100px;}

.clsImg{position:absolute;border:solid 1px #ccc;
padding:3px;width:85px;height:120px;
background-color:#eee;display:none}
</style>
<script>
$(function(){
	/*全选*/
	$("#ckal").click(function(){
		if (this.checked) {
			$("table tr td input[type=checkbox]").attr("checked",true);
		}
		else{
			$("table tr td input[type=checkbox]").attr("checked",false);
		}
  });
	/*删除*/
	$("table tr:not(':last'):gt(1):even").css('background','#eee');
	$('table tr:last').css('background','none');
	$('.btn').click(function(){
		var cks=$("input:checked:not('#ckal')").length;
		if (cks != 0) {
	    $("table tr td input[type=checkbox]:not('#ckal')").each(function(index){
	      if (this.checked) {
	        $("table tr[id=" +this.value+ "]").remove();
	      };
	    });
	  };
	});


  var x=5,y=15;
  $("table tr td img").mousemove(function(e){
  	$("#imgTop").attr("src",this.src).css({"top":(e.pageY+y)+"px","left":(e.pageX+x)+"px"}).show(200);
  });
  $("table tr td img").mouseout(function(){
  	$("#imgTop").hide(200);
  });
});

</script>
</head>
